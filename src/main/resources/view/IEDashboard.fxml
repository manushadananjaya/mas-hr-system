<AnchorPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="manusha.mas.controller.IEDashboardController">
    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <HBox alignment="CENTER_LEFT" style="-fx-background-color: #1a237e; -fx-padding: 10px;">
                    <children>
                        <Label style="-fx-font-size: 24px; -fx-text-fill: white;" text="IE Informations">
                            <HBox.margin>
                                <Insets left="20.0" />
                            </HBox.margin>
                        </Label>
                        <Region prefHeight="29.0" prefWidth="780.0" HBox.hgrow="ALWAYS" />
                        <Label style="-fx-font-size: 24px; -fx-text-fill: red;" text="MAS Intimates">
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>
            </top>
            <left>
                <VBox prefWidth="250.0" style="-fx-background-color: #1a237e; -fx-padding: 20px;">
                    <children>
                        <VBox prefHeight="464.0" prefWidth="211.0" spacing="10" VBox.vgrow="ALWAYS">
                            <children>
                                <Button fx:id="requestingFormBtn" maxWidth="Infinity" onAction="#handleRequestingFormBtn" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;" text="Requesting Form" />
                                <Button fx:id="requestedDetailsBtn" maxWidth="Infinity" onAction="#handleRequestedDetailsBtn" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;" text="Requested Details" />
                                <Button fx:id="trainingPerfoBtn" maxWidth="Infinity" onAction="#handleTrainingPerfoBtn" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;" text="Training Performance" />
                            </children>
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                        </VBox>
                        <Button fx:id="logOutBtn" maxWidth="Infinity" style="-fx-background-color: #4caf50; -fx-text-fill: white;" text="Log Out">
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                        </Button>
                    </children>
                </VBox>
            </left>
            <center>
                <StackPane>
                    <children>
                        <!-- Existing Main Content Pane -->
                        <AnchorPane prefHeight="800.0" prefWidth="1200.0" visible="false" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
                            <children>
                                <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <center>
                                        <StackPane>
                                            <children>
                                                <AnchorPane fx:id="mainContentPane">
                                                    <children>
                                                        <VBox spacing="20" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                                                            <children>
                                                                <!-- Updated GridPane for Form Fields -->
                                                                <GridPane hgap="10" vgap="10">
                                                                    <columnConstraints>
                                                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                                                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                                                                    </columnConstraints>
                                                                    <rowConstraints>
                                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                      <RowConstraints />
                                                      <RowConstraints />
                                                      <RowConstraints />
                                                      <RowConstraints />
                                                      <RowConstraints />
                                                      <RowConstraints />
                                                      <RowConstraints />
                                                      <RowConstraints />
                                                                    </rowConstraints>
                                                                    <children>
                                                                        <Label text="IEEPF" />
                                                                        <TextField fx:id="ieepfField" GridPane.columnIndex="1" />
                                                                        <Label text="IEName" GridPane.rowIndex="1" />
                                                                        <TextField fx:id="ieNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                                                        <Label text="IEShift" GridPane.rowIndex="2" />
                                                                        <TextField fx:id="ieShiftField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                                                        <Label text="IESection" GridPane.rowIndex="3" />
                                                                        <TextField fx:id="ieSectionField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                                                        <Label text="ModuleNo" GridPane.rowIndex="4" />
                                                                        <TextField fx:id="moduleNoField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                                                        <Label text="Customer" GridPane.rowIndex="5" />
                                                                        <TextField fx:id="customerField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                                                                        <Label text="Required Operation" GridPane.rowIndex="6" />
                                                                        <TextField fx:id="requiredOperationField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                                                                        <Label text="Required Date" GridPane.rowIndex="7" />
                                                                        <DatePicker fx:id="requiredDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                                                                        <Label text="Required Count" GridPane.rowIndex="8" />
                                                                        <TextField fx:id="requiredCountField" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                                                                    </children>
                                                                </GridPane>

                                                                <!-- Updated Table -->
                                                                <TableView fx:id="ieTable" VBox.vgrow="ALWAYS">
                                                                    <columns>
                                                                        <TableColumn fx:id="idColumn" text="id" />
                                                                        <TableColumn fx:id="ieepfColumn" text="IEEPF" />
                                                                        <TableColumn fx:id="ieNameColumn" prefWidth="98.0" text="IEName" />
                                                                        <TableColumn fx:id="ieShiftColumn" prefWidth="93.0" text="IEShift" />
                                                                        <TableColumn fx:id="ieSectionColumn" prefWidth="95.0" text="IESection" />
                                                                        <TableColumn fx:id="moduleNoColumn" prefWidth="122.0" text="ModuleNo" />
                                                                        <TableColumn fx:id="ReqOperationColumn" prefWidth="202.0" text="Operation" />
                                                                        <TableColumn fx:id="reqDateColumn" prefWidth="126.0" text="Required Date" />
                                                                        <TableColumn fx:id="reqCountColumn" prefWidth="93.0" text="Required Count" />
                                                                    </columns>
                                                                </TableView>

                                                                <!-- Save and Delete Buttons -->
                                                                <HBox spacing="10">
                                                                    <children>
                                                                        <Button fx:id="saveBtn" style="-fx-min-width: 100px;" text="Save" />
                                                                        <Button fx:id="editBtn" style="-fx-min-width: 100px;" text="Edit" />
                                                                        <Button fx:id="deleteBtn" style="-fx-min-width: 100px;" text="Delete" />
                                                                    </children>
                                                                </HBox>
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                </AnchorPane>
                                            </children>
                                        </StackPane>
                                    </center>
                                </BorderPane>
                            </children>
                        </AnchorPane>

                        <!-- Requested Details Pane -->
                        <AnchorPane fx:id="requestedDetailsPane" styleClass="content-pane" visible="false">
                            <children>

                                <TableView fx:id="shiftTable" styleClass="custom-table" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="60.0">
                                    <columns>
                                        <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name" />
                                        <TableColumn fx:id="sectionColumn" prefWidth="150.0" text="Section" />
                                        <TableColumn fx:id="moduleColumn" prefWidth="150.0" text="ModuleNo." />
                                        <TableColumn fx:id="operationColumn" prefWidth="150.0" text="Operation" />
                                        <TableColumn fx:id="dateColumn" prefWidth="150.0" text="Req.Date" />
                                        <TableColumn fx:id="countColumn" prefWidth="100.0" text="Count" />
                                    </columns>
                                </TableView>
                            </children>
                        </AnchorPane>

                        <!-- Training Performance Pane -->
                        <AnchorPane fx:id="trainingPerformancePane" styleClass="content-pane">
                            <children>
                                <!-- Search Section -->
                                <HBox alignment="CENTER_LEFT" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                                    <TextField fx:id="searchField" prefHeight="35.0" prefWidth="300.0" promptText="Search here" styleClass="search-field" />
                                </HBox>

                                <!-- Form and Skill Matrix Section -->
                                <GridPane hgap="20" vgap="10" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="80.0">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="50" />
                                        <ColumnConstraints percentWidth="50" />
                                    </columnConstraints>

                                    <!-- Left Side - Form Fields -->
                                    <VBox spacing="10" styleClass="form-container" GridPane.columnIndex="0">
                                        <GridPane hgap="10" vgap="10">
                                            <Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                            <Label text="Designation" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                            <TextField fx:id="designationField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                            <Label text="Gender" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                            <TextField fx:id="genderField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                            <Label text="Training S/D" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                            <TextField fx:id="trainingField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                 <columnConstraints>
                                    <ColumnConstraints />
                                    <ColumnConstraints />
                                 </columnConstraints>
                                 <rowConstraints>
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                 </rowConstraints>
                                        </GridPane>
                                    </VBox>

                                    <!-- Right Side - Skill Matrix -->
                                    <VBox spacing="10" styleClass="skill-matrix" GridPane.columnIndex="1">
                                        <Label styleClass="section-header" text="Skill Matrix" />
                                        <GridPane hgap="10" vgap="5">
                                            <Label text="Operation 01" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                            <ProgressBar prefWidth="200" progress="0.65" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                            <Label text="65%" GridPane.columnIndex="2" GridPane.rowIndex="0" />

                                            <Label text="Operation 02" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                            <ProgressBar prefWidth="200" progress="0.76" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                            <Label text="76%" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                 <columnConstraints>
                                    <ColumnConstraints />
                                    <ColumnConstraints />
                                    <ColumnConstraints />
                                 </columnConstraints>
                                 <rowConstraints>
                                    <RowConstraints />
                                    <RowConstraints />
                                 </rowConstraints>

                                            <!-- Add more operations similarly -->
                                        </GridPane>
                                    </VBox>
                           <rowConstraints>
                              <RowConstraints />
                           </rowConstraints>
                                </GridPane>

                                <!-- Charts Section -->
                                <HBox spacing="20" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="400.0">
                                    <!-- Performance Tracking Chart -->
                                    <VBox spacing="10" HBox.hgrow="ALWAYS">
                                        <Label styleClass="section-header" text="Performance Tracking" />
                                        <BarChart fx:id="performanceChart">
                                            <xAxis>
                                                <CategoryAxis label="Operations" />
                                            </xAxis>
                                            <yAxis>
                                                <NumberAxis label="Time" />
                                            </yAxis>
                                        </BarChart>
                                    </VBox>

                                    <!-- Daily Tracking Charts -->
                                    <VBox spacing="10" HBox.hgrow="ALWAYS">
                                        <Label styleClass="section-header" text="Daily Tracking" />
                                        <GridPane vgap="10">
                                            <BarChart fx:id="performanceDailyChart" prefHeight="200" title="Performance" GridPane.rowIndex="0">
                                                <xAxis>
                                                    <CategoryAxis />
                                                </xAxis>
                                                <yAxis>
                                                    <NumberAxis />
                                                </yAxis>
                                            </BarChart>

                                            <BarChart fx:id="fttChart" prefHeight="200" title="FTT" GridPane.rowIndex="1">
                                                <xAxis>
                                                    <CategoryAxis />
                                                </xAxis>
                                                <yAxis>
                                                    <NumberAxis />
                                                </yAxis>
                                            </BarChart>
                                 <columnConstraints>
                                    <ColumnConstraints />
                                 </columnConstraints>
                                 <rowConstraints>
                                    <RowConstraints />
                                    <RowConstraints />
                                 </rowConstraints>
                                        </GridPane>
                                    </VBox>
                                </HBox>
                            </children>
                        </AnchorPane>
                    </children>
                </StackPane>
            </center>
        </BorderPane>
    </children>
